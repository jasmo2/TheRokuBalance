<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Sign up</h2>
    <% @invitation_code = params["invitation_code"] unless params["invitation_code"].blank? %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :invitation_token, autofocus: @invitation_code.blank?, required: true, input_html:{value: @invitation_code} %>
        <%= f.input :email, required: true, autofocus: !!@invitation_code %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Sign up", class: "btn btn-success btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
